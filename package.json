{
  "name": "bun-svelte-pwa",
  "version": "1.0.0",
  "description": "TypeScript monorepo template for Svelte PWA with Bun runtime",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "dev": "npm --prefix modules/app run dev",
    "build": "npm --prefix modules/app run build",
    "preview": "npm --prefix modules/app run preview",
    "test": "npm --prefix modules/app run test",
    "test:ui": "npm --prefix modules/app run test:ui",
    "clean": "npm run --workspaces clean",
    "type-check": "npm run --workspaces type-check"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
